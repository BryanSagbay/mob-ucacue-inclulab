<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.test.test_Bennett">

    <!-- AppBar (Toolbar) -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Contenedor para Toolbar -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Botón Regresar -->
            <ImageButton
                android:id="@+id/button_regresarB"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Regresar"
                android:padding="6dp"
                android:src="@android:drawable/ic_menu_revert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Título de la página -->
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Test de Bennett"
                android:textColor="@android:color/white"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/logo1"
                app:layout_constraintStart_toEndOf="@id/button_regresarB"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Logo 1 -->
            <ImageView
                android:id="@+id/logo1"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Logo 1"
                android:src="@drawable/lg_ucacuelogo"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/logo2"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- Logo 2 -->
            <ImageView
                android:id="@+id/logo2"
                android:layout_width="140dp"
                android:layout_height="45dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Logo 2"
                android:src="@drawable/lg_udipsai"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <!-- Contenedor del cuerpo con fondo -->
    <View
        android:id="@+id/body_background"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/lg_ofertafond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.4"/>

    <Button
        android:id="@+id/button_enviar_m1B"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/btn_roundedtest"
        android:padding="8dp"
        android:text="FASE 1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_enviar_m2B"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="360dp"
        android:background="@drawable/btn_roundedtest"
        android:padding="8dp"
        android:text="FASE 2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_enviar_m3B"
        android:layout_width="400dp"
        android:layout_height="55dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="435dp"
        android:background="@drawable/btn_roundedtest"
        android:padding="8dp"
        android:text="FASE 3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Botón Flotante Play -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_playB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/blue"
        android:contentDescription="Iniciar"
        android:src="@android:drawable/ic_media_play"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botón Flotante Reinicio (Inicialmente oculto) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_resetB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/yellow20"
        android:contentDescription="Reiniciar"
        android:src="@android:drawable/ic_menu_revert"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_playB" />

    <!-- Botón Flotante para Guardar (Inicialmente oculto) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_saveB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/greendark"
        android:contentDescription="Guardar datos"
        android:src="@android:drawable/ic_menu_save"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/button_resetB" />

    <!-- CardView Inicial: Esperando / Jugando -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_esperaB"
        android:layout_width="700dp"
        android:layout_height="400dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/card_testview"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_datosB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Esperando, presione Comenzar..."
                android:textColor="@android:color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/gif_statusB"
                android:layout_width="170dp"
                android:layout_height="160dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_reloj_de_arena" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- CardView de Resultados (Oculta al inicio) -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card_datosB"
        android:layout_width="700dp"
        android:layout_height="400dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/card_testview"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/text_titulo_datosB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Resultados del Test"
                android:textColor="@color/blue"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Tiempo de Ejecución -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#E3F2FD">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:tint="#2196F3" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tiempo de Ejecución"
                                    android:textColor="#1565C0"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_tiempo_ejecucion"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00.00 seg"
                                    android:textColor="#0D47A1"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <!-- Errores -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="6dp"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="#FFEBEE">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <ImageView
                                android:layout_width="36dp"
                                android:layout_height="36dp"
                                android:src="@android:drawable/ic_dialog_alert"
                                android:tint="#F44336" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginStart="12dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Errores"
                                    android:textColor="#C62828"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_errores"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="7"
                                    android:textColor="#B71C1C"
                                    android:textSize="28sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>

            <!-- Teimpo de Total de Ejecución -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_extra_dato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#E8F5E9"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@android:drawable/ic_dialog_info"
                            android:tint="#4CAF50" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tiempo Total de Ejecución"
                                android:textColor="#1B5E20"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/tv_extra_dato"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Valor"
                                android:textColor="#2E7D32"
                                android:textSize="28sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <ImageView
                android:id="@+id/gif_status_resultadoB"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>