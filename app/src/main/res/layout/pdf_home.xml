<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".UI.patient.PatientHome">


    <!-- AppBar personalizado -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">


        <!-- Botón Regresar correctamente posicionado -->
        <ImageButton
            android:id="@+id/back_button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Regresar"
            android:padding="6dp"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Título de la página -->
        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Generar Reporte"
            android:textColor="@android:color/white"
            android:textSize="19sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/logo1"
            app:layout_constraintStart_toEndOf="@id/back_button"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo 1 -->
        <ImageView
            android:id="@+id/logo1"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Logo 1"
            android:src="@drawable/lg_ucacuelogo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/logo2"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Logo 2 -->
        <ImageView
            android:id="@+id/logo2"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="Logo 2"
            android:src="@drawable/lg_udipsai"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Contenido de Generación de PDF (colocado debajo del AppBar) -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/app_bar"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lg_ofertafond"
            android:paddingBottom="25dp">

            <!-- Tarjeta de información del usuario -->
            <androidx.cardview.widget.CardView
                android:id="@+id/infoCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#F5F5F5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generar Reporte en PDF"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:layout_marginBottom="8dp"/>

                    <!-- Mostrar el correo del usuario logueado -->
                    <TextView
                        android:id="@+id/textViewCorreo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargando correo..."
                        android:textSize="16sp"
                        android:textColor="@android:color/black"
                        android:gravity="center"
                        android:padding="8dp"
                        android:background="#E0E0E0"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de selección de fecha -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dateCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@id/infoCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Fecha del Reporte"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- TextView para mostrar la fecha seleccionada -->
                        <TextView
                            android:id="@+id/textViewFechaSeleccionada"
                            android:layout_width="0dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:text="Sin fecha seleccionada"
                            android:textSize="16sp"
                            android:textColor="@android:color/black"
                            android:padding="12dp"
                            android:background="@android:drawable/edit_text"/>

                        <!-- Botón para seleccionar la fecha -->
                        <ImageButton
                            android:id="@+id/btnSeleccionarFecha"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:src="@android:drawable/ic_menu_my_calendar"
                            android:contentDescription="Seleccionar fecha"
                            android:padding="8dp"
                            android:background="#BBDEFB"/>

                        <ImageButton
                            android:id="@+id/btnMore"
                            android:layout_width="100dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:src="@android:drawable/ic_menu_add"
                            android:contentDescription="Seleccionar fecha"
                            android:padding="8dp"
                            android:background="#FBBBBB"/>

                    </LinearLayout>

                    <!-- DatePicker con estilo mejorado -->
                    <DatePicker
                        android:id="@+id/datePicker"
                        android:layout_width="500dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/calendar_backround"
                        android:calendarTextColor="@color/text_primary"
                        android:datePickerMode="calendar"
                        android:theme="@style/DatePickerTheme" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Seleccionar Paciente"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"/>

                    <Spinner
                        android:id="@+id/spinnerPacientes"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textColor="#000000"
                        android:background="@color/white"
                        android:text="Seleccionar Paciente"
                        android:padding="10dp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Tarjeta de acción -->
            <androidx.cardview.widget.CardView
                android:id="@+id/actionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="#F5F5F5"
                app:layout_constraintTop_toBottomOf="@id/dateCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <!-- Botón para generar el PDF -->
                    <Button
                        android:id="@+id/btnGenerarPDF"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Generar PDF"
                        android:textSize="15sp"
                        android:padding="15dp"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:visibility="gone">

        <!-- Contenedor que permitirá centrar el spinner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_rounded"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/loadingGif"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Generando PDF..."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>

    <!-- Alerta de Error -->
    <FrameLayout
        android:id="@+id/errorOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:visibility="gone">

        <!-- Contenedor que permitirá centrar el spinner -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/btn_rounded"
                android:padding="24dp">

                <ImageView
                    android:id="@+id/errorloadingGif"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/errorMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Error al Generar el PDF..."
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</RelativeLayout>