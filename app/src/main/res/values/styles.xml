<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyCustomButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@color/black89</item>
        <item name="cornerRadius">32dp</item>
        <item name="rippleColor">@color/gray</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="EditTextCursorStyle">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/gray_dark</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:colorControlNormal">@color/control_normal</item>
        <item name="android:textSize">14sp</item>
    </style>


</resources>

